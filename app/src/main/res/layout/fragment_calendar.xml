<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/saturday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment">

    <TextView
        android:id="@+id/newAccount_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/title_calendar"
        android:textColor="@color/common_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/create_button"
        android:src="@drawable/ic_create"
        app:layout_constraintBottom_toBottomOf="@+id/newAccount_title"
        app:layout_constraintEnd_toEndOf="@+id/newAccount_title"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/kronon_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newAccount_title" />

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="360dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:context="jp.co.apps.workout.calendarsample.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:background="@color/krononOrenge">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="114dp"
                android:layout_marginRight="114dp"
                android:layout_toStartOf="@+id/prevButtonImg"
                android:layout_toLeftOf="@+id/prevButtonImg"
                android:gravity="center_vertical"
                android:text="2018.2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/prevButtonImg"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_toStartOf="@+id/nextButtonImg"
                android:layout_toLeftOf="@+id/nextButtonImg"
                android:background="@drawable/leftbutton"
                android:text="Prev" />

            <ImageButton
                android:id="@+id/nextButtonImg"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rightbutton"
                android:text="Next" />

            <TextView
                android:id="@+id/nextButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/nextButtonImg"
                android:layout_alignRight="@+id/nextButtonImg"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="-28dp"
                android:layout_marginRight="-28dp" />

            <TextView
                android:id="@+id/prevButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="-29dp"
                android:layout_marginRight="-29dp"
                android:layout_toStartOf="@+id/prevButtonImg"
                android:layout_toLeftOf="@+id/prevButtonImg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sunday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:layout_marginStart="-0.5dp"
                android:layout_marginLeft="-0.5dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="日"
                android:textAlignment="center"
                android:textColor="@color/redColor" />

            <TextView
                android:id="@+id/monday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="月"
                android:textAlignment="center"
                android:textColor="@color/grayColor" />

            <TextView
                android:id="@+id/tuesday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="火"
                android:textAlignment="center"
                android:textColor="@color/grayColor" />

            <TextView
                android:id="@+id/wednesday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="水"
                android:textAlignment="center"
                android:textColor="@color/grayColor" />

            <TextView
                android:id="@+id/thursday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="木"
                android:textAlignment="center"
                android:textColor="@color/grayColor" />

            <TextView
                android:id="@+id/friday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="金"
                android:textAlignment="center"
                android:textColor="@color/grayColor" />

            <TextView
                android:id="@+id/saturday_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="土"
                android:textAlignment="center"
                android:textColor="@color/blueColor" />

        </LinearLayout>

        <GridView
            android:id="@+id/calendarGridView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="-1dp"
            android:layout_weight="10"
            android:background="@drawable/border"
            android:horizontalSpacing="1dp"
            android:numColumns="7"
            android:paddingBottom="-1dp"
            android:stretchMode="columnWidth"></GridView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>